<h1>Todas las notas</h1>
{{!-- {{notes}} --}}
<div class="row">
    {{#each notes}}
    {{!-- <pre>{{this}}</pre> --}}
    <div class="col-md-3 p-2">
        <div class="card">            
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between aling-item-center">
                    {{title}} 
                    <a href="/notes/edit/{{_id}}">
                    <i class="fa fa-pen-square"></i>
                    </a>
                </h4>
                <p> {{description}}</p>
                <form action="/notes/delete/{{_id}}?_metodo=DELETE" method="POST">
                <input type="hidden" name="_metodo" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm">Borrar</button>
                </form>
            </div>
        </div>
    </div>

    {{/each}}
</div>



<a href="/about">
    <button class="btn btn-primary">
        About
    </button>
</a>