<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Account Login
      </div>
      <img src="/img/logo.png" class="rounded-circle max-auto d-block m-4 logo" />
      <div class="card-body">
        <form action="/users/signup" method="post">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Name"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="E-mail"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <div class="form-group">

          </div>
          <button class="btn btn-primary btn-block">
            SignIn
          </button>
        </form>
      </div>
    </div>
  </div>
</div>